{
    "name": "{{ cookiecutter.package_name }}",
    "type": "application",
    "description": "{{ cookiecutter.project_name }}",
    "keywords": [
        "php"
    ],
    "license": "proprietary",
    "authors": [
        {
            "name": "{{ cookiecutter.author_name }}",
            "email": "{{ cookiecutter.author_email }}"
        }
    ],
    "config": {
        "platform" : {
            "php" : "7.4.28",
            "ext-gd" : "1",
            "ext-intl" : "1",
            "ext-sockets": "1"
        }
    },
    "require": {
        "php": "^7.4",
        "itseasy/slim-app": "dev-main",
        "itseasy/laminas-db": "dev-main"
    },
    "require-dev" : {
        "phpunit/phpunit": "^9.5"
    },
    "autoload": {
        "psr-4": {
            "{{ cookiecutter.project_namespace | replace('\\', '\\\\') }}\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4" : {
            "{{ cookiecutter.project_namespace | replace('\\', '\\\\') }}\\Test\\": "test/"
        }
    }
}
